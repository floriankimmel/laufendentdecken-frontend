---
import BaseHead from '../components/BaseHead.astro';
import Banner from '../components/Banner.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FeatureImage from '../components/FeatureImage.astro';
import { Image } from 'astro:assets';
import playButton from '../assets/play.png';
import { SITE_TITLE, SITE_DESCRIPTION, WORDPRESS_API_EPISODES_URL } from '../consts';

const res = await fetch(WORDPRESS_API_EPISODES_URL)
const episodes = await res.json();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
            .show {
                display: block;
                position: relative;
            }

            .featureImage {
                opacity: 0.5;
            }

            .show:hover .featureImage {
                opacity: 0.9;
            }
            .show:hover .show_play_icon_first {
                transform: scale(1);
            }

            .show:hover .show_play_icon {
                transform: scale(1);
            }

            .show_play_icon_first {
                position: absolute;
                cursor: pointer;
                top: 37%;
                left: 45%;
                transform: scale(0.85);
                transition: 0.3s;
            }

            .show_play_icon {
                position: absolute;
                cursor: pointer;
                top: 27%;
                left: 37%;
                transform: scale(0.85);
                transition: 0.3s;
            }
			main {
				width: 80%;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(32% - 0.5rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--accent));
				line-height: 1;
                font-size: 0.9em;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.263em;
				}
			}
		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
        <Banner />
		<main>
			<section>
				<ul>
            {
            episodes.map((episode: any, index: number) => (
                <li>
                    <div class="show">
                        <a href={`/${episode.slug}/`}
                            class="featureImage">
                            <FeatureImage slug={episode.slug} index={index} />
                            <h5 class="title" set:html={episode.title.rendered} />
                            <div
                                class={index == 0 ? "show_play_icon_first" : "show_play_icon" }
                            >
                                <Image 
                                    src={playButton} 
                                    alt="https://www.flaticon.com/authors/cole-bemis"
                                    width=100
                                    height=100
                                    class="noHover"
                                    style="box-shadow: none;"
                                />
                            </div>
                        </a>
                    </div>
                </li>
            ))
            }
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
